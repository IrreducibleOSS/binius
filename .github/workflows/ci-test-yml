name: Rust CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    name: build-debug-${{ matrix.expand.name }}
    runs-on: ${{ matrix.expand.runner }}
    container: rustlang/rust:nightly
    strategy:
      matrix:
        expand:
          - {"runner: "ubuntu-latest", "name": "wasm", "cmd": "rustup target add wasm32-unknown-unknown && cargo build --package binius_field --target wasm32-unknown-unknown"}          -
          - {"runner: "ubuntu-latest", "name": "amd", "cmd": "cargo build --tests --benches --examples"}
          - {"runner: "ubuntu-latest", "name": "amd-no-default-features", "cmd" "cargo build --tests --benches --examples --no-default-features"}
          - {"runner: "ubuntu-latest", "name": "amd-stable", "cmd": "cargo +1.83.0 build --tests --benches --examples -p binius_core --features stable_only"}
          - {"runner: "ubuntu-22.04-arm", "name": "amd", "cmd": "cargo build --tests --benches --examples"}
    continue-on-error: true
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Run Command
        run: ${{ matrix.expand.cmd }}
